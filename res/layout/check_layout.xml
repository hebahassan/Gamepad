    <TextView
        android:id="@+id/textView1"
        android:layout_width="230dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="Choose a connection way to connect the android application with the desktop server"
        android:textColor="#ffffff"
        android:textSize="23sp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_background" >

       <ImageButton
            android:id="@+id/Wifi_check"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginLeft="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/wifi" />
       
       <ImageButton
            android:id="@+id/Bluetooth_check"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/Wifi_check"
            android:layout_toRightOf="@+id/Wifi_check"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"/>
       
       <ImageView
        android:id="@+id/imageview1"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/Bluetooth_check"
        android:layout_alignTop="@+id/Bluetooth_check"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/bluetooth" />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_marginTop="30dp"
        android:text="Go to this link to download our desktop server"
        android:textColor="#ffffff"
        android:textSize="23sp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="19dp"
        android:clickable="false"
        android:text="Switch" />

</RelativeLayout>