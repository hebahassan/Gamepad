<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#01091F">
    
     <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:scaleY="1.8"
        android:src="@drawable/banner" /> 
        
        <!-- #4682B4 blue
        #20B2AA fo7lo2y :'D
        #1A4876 midnight blue
        #01091F dark
        #1A002B move-->

    <ImageButton
        android:id="@+id/home_imageButton1"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn5_background"/>

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/home_imageButton1"
        android:layout_alignTop="@+id/home_imageButton1"
        android:layout_marginTop="6dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_gamepad" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/home_imageButton1"
        android:layout_below="@+id/imageview1"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Gamepad"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/home_imageButton5"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/home_imageButton1"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/home_imageButton1"
        android:background="@drawable/btn5_background" />
    
    <ImageView
        android:id="@+id/imageview5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/home_imageButton5"
        android:layout_alignTop="@+id/home_imageButton5"
        android:layout_marginTop="6dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_settings" />
    
     <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/home_imageButton5"
        android:layout_below="@+id/imageview5"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textSize="20sp" />

     <ImageButton
         android:id="@+id/home_imageButton3"
         android:layout_width="150dp"
         android:layout_height="130dp"
         android:layout_marginLeft="60dp"
         android:layout_marginTop="190dp"
         android:background="@drawable/btn5_background" />
     
     <ImageView
        android:id="@+id/imageview3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/home_imageButton3"
        android:layout_alignTop="@+id/home_imageButton3"
        android:layout_marginTop="6dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_mouse" />
     
     <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/home_imageButton3"
        android:layout_below="@+id/imageview3"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Mouse"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textSize="20sp" />

     <ImageButton
         android:id="@+id/home_imageButton4"
         android:layout_width="150dp"
         android:layout_height="130dp"
         android:layout_toRightOf="@+id/home_imageButton3"
         android:layout_alignTop="@+id/home_imageButton3"
         android:layout_marginLeft="50dp"
         android:background="@drawable/btn5_background" />
     
     <ImageView
        android:id="@+id/imageview4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/home_imageButton4"
        android:layout_alignTop="@+id/home_imageButton4"
        android:layout_marginRight="30dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_update" />
     
     <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/home_imageButton4"
        android:layout_below="@+id/imageview4"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Updates"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textSize="20sp" />
     
     <ImageButton
         android:id="@+id/home_imageButton2"
         android:layout_width="150dp"
         android:layout_height="130dp"
         android:layout_marginLeft="60dp"
         android:layout_marginTop="340dp"
         android:background="@drawable/btn5_background" />
     
     <ImageView
        android:id="@+id/imageview2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/home_imageButton2"
        android:layout_alignTop="@+id/home_imageButton2"
        android:layout_marginTop="6dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_media" />
     
     <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/home_imageButton2"
        android:layout_below="@+id/imageview2"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Slide Controller"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textSize="18sp" />
     
     <ImageButton
         android:id="@+id/home_imageButton6"
         android:layout_width="150dp"
         android:layout_height="130dp"
         android:layout_toRightOf="@+id/home_imageButton2"
         android:layout_alignTop="@+id/home_imageButton2"
         android:layout_marginLeft="50dp"
         android:background="@drawable/btn5_background" />
     
     <ImageView
        android:id="@+id/imageview6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/home_imageButton6"
        android:layout_alignTop="@+id/home_imageButton6"
        android:layout_marginRight="30dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_file" />
     
     <TextView
        android:id="@+id/textView6"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/home_imageButton6"
        android:layout_below="@+id/imageview6"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="File Manager"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textSize="18sp" />

     <Button
         android:id="@+id/helpbtn"
         android:layout_width="360dp"
         android:layout_height="60dp"
         android:layout_marginTop="520dp" 
         android:layout_marginLeft="60dp"
         android:background="@drawable/btn5_background"
         android:text="Help"
         android:textColor="#ffffff"
         android:textStyle="bold"
         android:textSize="25sp"/>
 

     <ImageView  
         android:id="@+id/helpimg"
         android:layout_width="wrap_content"
         android:layout_height="60dp"
         android:layout_alignBottom="@+id/helpbtn"
         android:layout_alignRight="@+id/helpbtn"
         android:layout_marginRight="100dp"
         android:src="@drawable/white_help"
         android:background="@android:color/transparent" /> 
    
</RelativeLayout>

